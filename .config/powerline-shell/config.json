{
  "segments": [
    "newline",
    "virtual_env",
    "username",
    {
      "type": "stdout",
      "command": ["hostnamectl", "--pretty", "status"],
      "fg_color": "250",
      "bg_color": "238"
    },
    "ssh",
    "cwd",
    "read_only",
    "git",
    "git_stash",
    "newline",
    "jobs",
    "time",
    "exit_code",
    "root"
  ],
  "cwd": {
    "mode": "plain",
    "max_depth": 8,
    "max_dir_size": 10,
    "full_cwd": true
  },
  "vcs": {
    "show_symbol": true
  },
  "theme": "basic"
}
